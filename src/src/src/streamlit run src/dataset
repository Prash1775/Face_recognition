import cv2
import os

name = input("Enter student name (e.g., prashant_rokade): ").strip()
path = os.path.join("dataset", name)
os.makedirs(path, exist_ok=True)

cam = cv2.VideoCapture(0)
cv2.namedWindow("Press SPACE to capture, ESC to exit")
count = 0

while True:
    ret, frame = cam.read()
    if not ret:
        print("Failed to open webcam.")
        break
    cv2.imshow("Press SPACE to capture, ESC to exit", frame)
    k = cv2.waitKey(1)
    if k % 256 == 27:  # ESC
        print("Exiting...")
        break
    elif k % 256 == 32:  # SPACE
        img_name = f"{count + 1}.jpg"
        img_path = os.path.join(path, img_name)
        cv2.imwrite(img_path, frame)
        print(f"Saved: {img_path}")
        count += 1

cam.release()
cv2.destroyAllWindows()
print(f"Total {count} images saved for {name}")
